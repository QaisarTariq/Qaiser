@model IEnumerable<Task.tbl_Task>

@{
    ViewBag.Title = "Index";
}





@if (Model.Count() > 0)
{
    
    
    
    <center><h2> Task Records</h2></center>



        <fieldset>
            <table>
                <tr>
                    <th>
                        @Html.Label("Title")
                    </th>
                    <th>
                        &nbsp;&nbsp;&nbsp;&nbsp; @Html.Label("Descripition")
                    </th>
                    <th>
                        &nbsp;&nbsp;&nbsp;&nbsp;             @Html.Label("Due Date")
                    </th>
                    <th>
                        &nbsp;&nbsp;&nbsp;&nbsp;             @Html.Label("Required Hours")
                    </th>
                    <th>
                        &nbsp;&nbsp;&nbsp;&nbsp;              @Html.Label("priority")
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.strTitle)
                        </td>

                        <td>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  @Html.DisplayFor(modelItem => item.strDescripition)
                        </td>
                        <td>
                            &nbsp;&nbsp;
                            @{
                    DateTime date = (DateTime)item.dtDueDate;
                    string d1 = date.ToShortDateString();
                    @Html.DisplayFor(modelItem => d1)
                            }

                        </td>
                        <td>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  @Html.DisplayFor(modelItem => item.requiredHours)
                        </td>
                        <td>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;   @Html.DisplayFor(modelItem => item.priority)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }
               

            </table>
        </fieldset>
        <p>
            @Html.ActionLink("Add New Task", "Create")       
            @Html.ActionLink("Back", "Index")
           
             
        </p>
    
}
else
{
        <div>No Record Found</div>
            <p>
                @Html.ActionLink("Back to List", "Index")
        </p>

}

